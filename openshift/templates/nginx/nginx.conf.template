server {
    listen       ${NGINX_SERVER_PORT};
    server_name  ${NGINX_SERVER_NAME};
    root   /usr/share/nginx/html/timemachine;
    absolute_redirect off;
    # port_in_redirect off;

    # absolute_redirect off;
    # location / {
    #     port_in_redirect off;
    #     root   /usr/share/nginx/html/timemachine;
    #     index  index.html;
    #     # try_files $uri $uri/ /index.html;
    # }

    location / {
      # absolute_redirect off;
      index  index.html;
      add_header X-debug-one "location / $uri $document_root" always;
      # try_files $uri $uri/ /index.html;
      # try_files $uri $uri/ =404;        # Static site # UNATTEMPTED
      try_files $uri /index.html =404;
      

    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
      root   /usr/share/nginx/html;
    }

    # location /html {
    #     # port_in_redirect off;
    #     root   /usr/share/nginx/html;
    #     index  index.html;
    #     # try_files $uri /

    # }

    # For status of ngnix service, OpenShift is configured to call this
    location /nginx_status {
        # Enable Nginx stats
        stub_status on;
        # No need to log this request, its just noise
        access_log off;
    }
}
